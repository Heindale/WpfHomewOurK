                               Margin="10 0 65 0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Bottom"
                               x:Name="AttachmentsLink"
                               MouseDown="AttachmentsLink_MouseDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource MaterialDesignTextBlock}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                        <Setter Property="FontFamily"
                                                Value="Verdana" />
                                        <Setter Property="Foreground"
                                                Value="#009688" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver"
                                             Value="False">
                                        <Setter Property="Cursor"
                                                Value="Arrow" />
                                        <Setter Property="FontFamily"
                                                Value="Verdana" />
                                        <Setter Property="Foreground"
                                                Value="#565656" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>


